<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <!-- What new item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:text="@string/what_item"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/what_text"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.75"
            android:layout_marginRight="5dp"
            android:imeOptions="flagNoExtractUi"/>

    </LinearLayout>

    <!-- Where to buy new item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:text="@string/where"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/where_text"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.75"
            android:layout_marginTop="45dp"
            android:layout_marginRight="5dp"
            android:imeOptions="flagNoExtractUi"/>
        <!-- keyboard only fills half the screen -->
    </LinearLayout>

    <!-- Button to add new item-->

    <Button
        android:id="@+id/add_button"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:layout_marginTop="10dp"
        android:background="#39f208"
        android:text="@string/heading_create"
        android:textSize="@dimen/text_size" />

    <!-- Button to list all items-->
    <Button
        android:id="@+id/list"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center|center"
        android:background="#39f208"
        android:text="@string/list"
        android:layout_marginBottom="45dp"/>


</FrameLayout>